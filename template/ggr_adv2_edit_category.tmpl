<table width="770" border="0" cellspacing="0" cellpadding="0">
<form method="POST" action="{$config{category_create}}" name=frm>
<tr align="center">
	    <td height="40" colspan="2" class="pageheading">Create Group List for Batch Processing</td>
      </tr>
	<tr>
            <td>
                    Enter Name of List: <input type=text name="category" size=20>&nbsp;&nbsp;{$error_category}
            </td>
        </tr>
        <tr>
            <td>
                    Select Groups that should be included in the list: <select name="group"size=5 multiple >
                    {
                       my $saved_groups = '';                      
                       foreach my $group (@group_list)
                       {
                          
                          if(grep(/$group/,@group_selected_list) == 1)
                          {
                            $saved_groups .= '<option value="' . $group . '" selected="selected">' . $group . '</option>';
                          }
                          else
                          {
                            $saved_groups .= '<option value="' . $group . '" >' . $group . '</option>';
                          }
                       }
                       $saved_groups;
                    }
                    </select><br><input name="Submit" type="submit" value="Submit" >
            </td>
        </tr>
        <input type="hidden" name="action" value="update">
    </form>
</table>
